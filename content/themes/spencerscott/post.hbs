{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}
<div class="container-fluid wrapper">
  <div class="row">
    <div class="col-xs-12">
      {{> post-hero}}
    </div>
    <div class="col-xs-12 col-lg-8 col-xl-12">
      <article class="{{post_class}} post-access-{{visibility}} has-sidebar">
        {{#if access}}
          {{> social-share}}
        {{/if}}
        <div class="post__content no-overflow">
          {{#if access}}
            {{content}}
          {{else}}
            {{> content-cta fading=true}}
          {{/if}}
        </div>
      </div>
  </div>
</div>

{{!-- Related posts --}}
{{> related-posts}}
{{/post}}
